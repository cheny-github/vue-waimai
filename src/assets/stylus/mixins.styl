border-1px($color,$direction=top)
    position relative
    &::before
        content ''
        display block
        position absolute
        if $direction==bottom
            bottom 0
        else 
            top 0
        width 100%
        height 1px
        background $color
        @media (-webkit-min-device-pixel-ratio: 2),(min-resolution: 2)
            transform scaleY(.5)
        @media (-webkit-min-device-pixel-ratio: 3),(min-resolution: 3)
            transform scaleY(.3)

border-1px-top()
    border-1px(#cccccc)

border-1px-bottom()
    border-1px(#cccccc,bottom)